@model List<Lungisa.Services.FirebaseService.FirebaseNewsArticle>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <!-- Meta -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <!-- Title -->
    <title>Manage News</title>

    <!-- Links -->
    <link rel="stylesheet" href="~/Content/formStyle.css" />
    <link rel="stylesheet" href="~/css/formStyle.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="~/css/Site.css" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/Content/Images/LOGOLungisa.png">

    <!-- Google fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />
</head>
<body>

    <!-- ================= HEADER AND NAVIGATION ================= -->
    <header>
        <a class="logo" href="/">
            <img src="~/Content/Images/LungisaLogo.png" alt="Lungisa Logo">
        </a>

        <nav>
            <ul>
                <li><a href="/Admin/AdminDashboard" class="nav-link">DASHBOARD</a></li>
                <li><a href="/Donations" class="nav-link">DONATIONS</a></li>
                <li><a href="/Projects" class="nav-link">PROJECTS</a></li>
                <li><a href="/Events" class="nav-link">EVENTS</a></li>
                <li><a href="/NewsAdmin" class="nav-link active">NEWS </a></li>
                <li><a href="/Volunteers" class="nav-link">VOLUNTEERS</a></li>
                <li><a href="/Subscribers" class="nav-link">SUBSCRIBERS</a></li>
                <li><a href="/Contacts" class="nav-link">CONTACT</a></li>
            </ul>
        </nav>
    </header>

    <div class="container">
        <h1>Post News Articles</h1>
        <p>Create, schedule and publish stories.</p>
        <section class="section-card1">
            <h2>New Article</h2>
            <form action="/NewsAdmin/AddNews" method="post" enctype="multipart/form-data">
                <div class="form-group"><label>Headline</label><input type="text" name="title" required></div>
                <div class="form-group"><label>Summary</label><textarea name="summary" rows="2" required></textarea></div>
                <div class="form-group"><label>Body</label><textarea name="body" rows="8" required></textarea></div>
                <div class="form-group"><label>Featured Image</label><input type="file" name="image" accept="image/*"></div>
                <button class="btn-publish" type="submit">Publish</button>
            </form>
        </section>
        <br />
        <br />
        <section class="section-card2">
            <h2>Drafts & Published</h2>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Summary</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model != null ? Model : new List<Lungisa.Services.FirebaseService.FirebaseNewsArticle>())
                        {
                            if (item.Article != null)
                            {
                                <tr>
                                    <td>@item.Article.Title</td>
                                    <td>@item.Article.Summary</td>
                                    <td>@item.Article.Date</td>
                                    <td>
                                        <a class="btn-edit" href="#">Edit</a>
                                        <br />
                                        <a class="btn-delete" href="/News/Delete/@item.Key" onclick="return confirm('Delete this article?');">Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </section>
    </div>
</body>
</html>
