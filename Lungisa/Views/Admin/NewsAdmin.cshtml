@model List<Lungisa.Services.FirebaseService.FirebaseNewsArticle>
@{
    Layout = null;

    // If editing, the article to edit is passed via ViewBag
    var articleToEdit = ViewBag.ArticleToEdit as Lungisa.Models.NewsArticleModel;
    var articleKey = ViewBag.ArticleKey as string;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Manage News</title>

    <link rel="stylesheet" href="~/Content/formStyle.css" />
    <link rel="stylesheet" href="~/css/formStyle.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/Content/Images/LOGOLungisa.png">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />
</head>
<body>
    <header>
        <a class="logo" href="/"><img src="~/Content/Images/LungisaLogo.png" alt="Lungisa Logo"></a>
        <button class="menu-toggle" aria-label="Toggle navigation" aria-controls="main-nav" aria-expanded="false">
            <span></span><span></span><span></span>
        </button>
        <nav id="main-nav" class="main-nav">
            <ul>
                <li><a href="/Admin/AdminDashboard" class="nav-link">DASHBOARD</a></li>
                <li><a href="/DonationsAdmin" class="nav-link">DONATIONS</a></li>
                <li><a href="/Projects" class="nav-link">PROJECTS</a></li>
                <li><a href="/Events" class="nav-link">EVENTS</a></li>
                <li><a href="/NewsAdmin" class="nav-link active">NEWS</a></li>
                <li><a href="/Volunteers" class="nav-link">VOLUNTEERS</a></li>
                <li><a href="/Subscribers" class="nav-link">SUBSCRIBERS</a></li>
                <li><a href="/Contacts" class="nav-link">CONTACT</a></li>
            </ul>
        </nav>
    </header>

    <div class="container">
        <h1>Post News Articles</h1>
        <p>Create, schedule, and publish stories.</p>

        <!-- Add/Edit Form -->
        <section class="section-card1">
            <h2>@(articleKey != null ? "Edit Article" : "New Article")</h2>
            @if (TempData["Success"] != null)
            {
                <div class="alert-success">@TempData["Success"]</div>
            }
            </br>
            <form action="@(articleKey != null ? "/NewsAdmin/UpdateNews" : "/NewsAdmin/AddNews")" method="post" enctype="multipart/form-data">
                @if (articleKey != null)
                {
                    <input type="hidden" name="articleKey" value="@articleKey" />
                }
                <div class="form-group">
                    <label>Headline</label>
                    <input type="text" name="title" required value="@(articleToEdit?.Title ?? "")" />
                </div>

                <div class="form-group">
                    <label>Summary</label>
                    <textarea name="summary" rows="2" required>@(articleToEdit?.Summary ?? "")</textarea>
                </div>

                <div class="form-group">
                    <label>Body</label>
                    <textarea name="body" rows="8" required>@(articleToEdit?.Body ?? "")</textarea>
                </div>

                <div class="form-group">
                    <label>Featured Image</label>
                    <input type="file" name="image" accept="image/*" />
                </div>

                <button class="btn-publish" type="submit">
                    @(articleKey != null ? "Update Article" : "Publish")
                </button>
            </form>
        </section>

        <br /><br />

        <!-- Existing Articles Table -->
        <section class="section-card2">
            <h2>Drafts & Published</h2>
            <div class="table-container">
                <table>
                    <thead>
                        <tr><th>Title</th><th>Summary</th><th>Date</th><th>Actions</th></tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model ?? new List<Lungisa.Services.FirebaseService.FirebaseNewsArticle>())
                        {
                            if (item.Article != null)
                            {
                                <tr>
                                    <td>@item.Article.Title</td>
                                    <td>@item.Article.Summary</td>
                                    <td>@item.Article.Date</td>
                                    <td>
                                        <a class="btn-delete" href="/NewsAdmin/Delete/@item.Key" onclick="return confirm('Delete this article?');">Delete</a>
                                        <a class="btn-edit" href="/NewsAdmin/EditNews/@item.Key">Edit</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </section>
    </div>

    <script>
        (function () {
            const btn = document.querySelector('.menu-toggle');
            const nav = document.getElementById('main-nav');
            if (!btn || !nav) return;
            btn.addEventListener('click', () => {
                const isOpen = nav.classList.toggle('open');
                btn.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
            });
        })();
    </script>
</body>
</html>
