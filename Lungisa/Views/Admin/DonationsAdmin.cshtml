<!-- This admin page provides a detailed overview of all donations made through the Lungisa platform. It displays donor details,
    payment information, and donation statuses. -->

@model List<Lungisa.Models.DonationModel>

@{
    ViewBag.Title = "Donations Dashboard";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <!-- Meta -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <!-- Title -->
    <title>Volunteers</title>

    <!-- Links -->
    <link rel="stylesheet" href="~/Content/formStyle.css" />
    <link rel="stylesheet" href="~/css/formStyle.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Google fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />
</head>
<body>
    <!-- ================= ADMIN HEADER AND NAVIGATION ================= -->
    <header>
        <a class="logo" href="/">
            <img src="~/Content/Images/LungisaLogo.png" alt="Lungisa Logo">
        </a>

        <!-- hamburger -->
        <button class="menu-toggle" aria-label="Toggle navigation" aria-controls="main-nav" aria-expanded="false">
            <span></span><span></span><span></span>
        </button>

        <!-- nav wrapper -->
        <nav id="main-nav" class="main-nav">
            <ul>
                <li><a href="/Admin/AdminDashboard" class="nav-link">DASHBOARD</a></li>
                <li><a href="/DonationsAdmin" class="nav-link active">DONATIONS</a></li>
                <li><a href="/Projects" class="nav-link">PROJECTS</a></li>
                <li><a href="/Events" class="nav-link">EVENTS</a></li>
                <li><a href="/NewsAdmin" class="nav-link">NEWS</a></li>
                <li><a href="/Volunteers" class="nav-link ">VOLUNTEERS</a></li>
                <li><a href="/Subscribers" class="nav-link">SUBSCRIBERS</a></li>
                <li><a href="/Contacts" class="nav-link">CONTACT</a></li>
            </ul>
        </nav>

    </header>

    <br />
    <br />

    <section class="section-card2">
        <h1>Donations Dashboard</h1>
        <div class="table-container">
            <table>
                <thead class="table-dark">
                    <tr>
                        <th>Donor Name</th>
                        <th>Email</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Payment ID</th>
                        <th>Timestamp</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var donation in Model)
                        {
                            <tr>
                                <td>@donation.DonorName</td>
                                <td>@donation.Email</td>
                                <td>R @donation.Amount?.ToString("0.00")</td>

                                <td>
                                    @if (donation.Status == "Success")
                                    {
                                        <span class="badge bg-success">Success</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Failed</span>
                                    }
                                </td>
                                <td>@donation.PayFastPaymentId</td>
                                <td>@donation.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">No donations found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous">
    </script>
    <script>
        (function () {
            const btn = document.querySelector('.menu-toggle');
            const nav = document.getElementById('main-nav');
            if (!btn || !nav) return;

            btn.addEventListener('click', () => {
                const isOpen = nav.classList.toggle('open');
                btn.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
            });
        })();
    </script>
</body>
</html>