<!-- The Admin Dashboard page of the Lungisa NPO website is a central hub to oversee every aspect of Lungisa’s operations—manage projects,
    donations, users, news, events and volunteer sign-ups from one intuitive interface. -->
@{
    ViewBag.Title = "Admin Dashboard";
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <!-- Meta -->
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />

        <!-- Title -->
        <title>Admin Dashboard</title>

        <!-- Links -->
        <link rel="stylesheet" href="~/Content/admin.css" />
        <link href="~/css/admin.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="icon" type="image/png" sizes="32x32" href="~/Content/Images/LOGOLungisa.png">

            <!-- Bootstrap 5 CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />

        <!-- Google Fonts (Poppins + Material Icons) -->
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    </head>
    <body>
        <!-- ================= HEADER ================= -->
        <header class="admin-header">
            <a class="logo" href="/">
                <img src="~/Content/Images/LungisaLogo.png" alt="Lungisa Logo">
            </a>

@*             <!-- Hamburger for mobile -->
            <button class="menu-toggle" aria-label="Toggle navigation" aria-controls="admin-nav" aria-expanded="false">
                <span></span><span></span><span></span>
            </button> *@

            <!-- Admin nav / title wrapper -->
            <nav id="admin-nav" class="admin-nav">
                <div class="admin-title">
                    <h1>Admin Dashboard</h1>
                    <p>Manage Lungisa’s back-office in one place.</p>
                </div>
                <div class="header-buttons">
                    <a class="btn-admin" href="/Home/Index">LOGOUT</a>
                </div>
            </nav>
        </header>
        <!-- ================= GRIDS ================= -->
        <!-- ================= 1. PROJECTS ================= -->
        <div class="container">
            <!-- 1 Projects -->
            <div class="card">
                <img src="~/css/Images/projectsheading.jpeg" alt="Projects" class="thumb" />
                <div class="card-body">
                <div class="icon"><i class="material-icons">assignment</i></div>
                    <h3>Projects</h3>
                    <p>Create, edit or delete organisational projects and assign managers.</p>
                    <a class="card-btn" href="/Projects">Manage Projects</a>
                </div>
            </div>

            <!-- ================= 2. DONATIONS ================= -->
            <div class="card">
                <img src="~/css/Images/donationsheading.jpeg" alt="Donations" class="thumb">
                <div class="card-body">
                <div class="icon"><i class="material-icons">credit_card</i></div>
                    <h3>Donations</h3>
                    <p>Track incoming gifts, download donor reports and issue receipts.</p>
                    <a class="card-btn" href="/DonationsAdmin">Manage Donations</a>
                </div>
            </div>

            <!-- ================= 3. USER ACCOUNTS ================= -->
            <div class="card">
            <img class="thumb" src="~/css/Images/createadminheading.jpeg" alt="Create Admin">
                <div class="card-body">
                <div class="icon"><i class="material-icons">admin_panel_settings</i></div>
                    <h3>Create Admin</h3>
                    <p>Add staff, assign roles, reset passwords and audit activity.</p>
                    <a class="card-btn" href="@Url.Action("CreateAdmin", "Admin")">Create Admin</a>
                </div>
            </div>

            <!-- ================= 4. NEWS ARTICLES ================= -->
            <div class="card">
                <img src="~/css/Images/newsheading.jpeg" alt="News" class="thumb">
                <div class="card-body">
                <div class="icon"><i class="material-icons">newspaper</i></div>
                    <h3>News Articles</h3>
                    <p>Write, schedule and publish stories to the public site.</p>
                    <a class="card-btn" href="/NewsAdmin">Create Post</a>
                </div>
            </div>

            <!-- ================= 5. VOLUNTEER SIGN-UPS ================= -->
            <div class="card">
                <img src="~/css/Images/volunteerheading.jpeg" alt="Volunteers" class="thumb">
                <div class="card-body">
                <div class="icon"><i class="material-icons">volunteer_activism</i></div>
                    <h3>Volunteer Sign-ups</h3>
                    <p>Review applications, approve shifts and export contact lists.</p>
                    <a class="card-btn" href="/Volunteers">View Sign-ups</a>
                </div>
            </div>

            <!-- ================= 6. EVENTS ================= -->
            <div class="card">
                <img src="~/css/Images/eventsheading.jpeg" alt="Events" class="thumb">
                <div class="card-body">
                <div class="icon"><i class="material-icons">event</i></div>
                    <h3>Events</h3>
                    <p>Add upcoming events, edit details and manage RSVPs.</p>
                    <a class="card-btn" href="/Events">Manage Events</a>
                </div>
            </div>

            <!-- ================= 7. CONTACTS ================= -->
            <div class="card">
                <img src="~/css/Images/contactheading.jpeg" alt="Contacts" class="thumb">
                <div class="card-body">
                <div class="icon"><i class="material-icons">contact_page</i></div>
                    <h3>Contacts</h3>
                    <p>Send emails to users who have contacted Lungisa.</p>
                    <a class="card-btn" href="/Contacts">Contact Us Management</a>
                </div>
            </div>

            <!-- ================= 8. SUBSCRIBERS ================= -->
            <div class="card">
            <img class="thumb" src="~/css/Images/subscribersheading.jpeg" alt="Subscribers">
                <div class="card-body">
                <div class="icon"><i class="material-icons">subscriptions</i></div>
                <h3>Subscribers</h3>
                    <p>Send subscribers notifications to updates.</p>
                <a class="card-btn" href="/Subscribers">Subscribers Management</a>
                </div>
            </div>
            <!-- ================= 9. ANALYTICS ================= -->
            <div class="card">
                <img class="thumb" src="~/css/Images/analyticsheading.jpeg" alt="Analytics">
                <div class="card-body">
                <div class="icon"><i class="material-icons">bar_chart</i></div>
                    <h3>Analytics</h3>
                    <p>Statistics of how the website is doing.</p>
                    <a class="card-btn" href="/Analytics">Lungisa Analytics</a>
                </div>
            </div>
        </div>
    </body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous">
</script>
