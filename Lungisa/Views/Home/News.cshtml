            <main class="middle-cols">
                @foreach (var item in Model ?? new List<Lungisa.Services.FirebaseService.FirebaseNewsArticle>())
                {
                    if (item.Article != null)
                    {
                        <article class="news-cards">
                            <h2 class="title">
                                <a href="@Url.Action("Details", "News", new { id = item.Key })">
                                    @item.Article.Title
                                </a>
                            </h2>
                            <p class="body">
                                @item.Article.Summary
                            </p>
                        </article>
                    }
                }
            </main>

            <div class="pagination">
                @if (ViewBag.CurrentPage > 1)
                {
                    <a href="@Url.Action("Index", "News", new { page = ViewBag.CurrentPage - 1 })">Previous</a>
                }

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    if (i == ViewBag.CurrentPage)
                    {
                        <span class="current">@i</span>
                    }
                    else
                    {
                        <a href="@Url.Action("Index", "News", new { page = i })">@i</a>
                    }
                }

                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                    <a href="@Url.Action("Index", "News", new { page = ViewBag.CurrentPage + 1 })">Next</a>
                }
            </div>


        </section>
