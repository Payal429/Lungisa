@model Lungisa.Models.NewsArticleModel
@{
    Layout = null;
}

<!DOCTYPE html>
<head>
    <!-- Meta -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <!-- Title -->
    <title>Home</title>

    <!-- Links -->
    <link rel="stylesheet" href="~/Content/home.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/Content/Images/LOGOLungisa.png">

    <!-- Google fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />
</head>
<html>

<body>
    <!-- ================= HEADER AND NAVIGATION ================= -->
    <header>
        <a class="logo" href="/">
            <img src="~/Content/Images/LungisaLogo.png" alt="Lungisa Logo">
        </a>

        <nav>
            <ul>
                <li><a href="/Home/Index" class="nav-link ">HOME</a></li>
                <li><a href="/Home/About" class="nav-link">ABOUT</a></li>
                <li><a href="/Home/Services" class="nav-link">SERVICES</a></li>
                <li><a href="/Home/News" class="nav-link active">LATEST NEWS</a></li>
                <li><a href="/Home/Contact" class="nav-link">CONTACT</a></li>
            </ul>
        </nav>

        <div class="header-buttons">
            <a class="btn-donate" href="/Home/Donations">DONATE</a>
            <a class="btn-admin" href="/Login/Index">ADMIN LOGIN</a>
        </div>
    </header>


    <div class="news-details">
        <h1>@Model.Title</h1>
        <img src="@Model.ImageUrl" alt="@Model.Title" />
        <p><strong>Date:</strong> @Model.Date</p>
        <p>@Model.Body</p>
        <a href="@Url.Action("Index", "News")">Back to News</a>
    </div>

    <!-- ================= FOOTER ================= -->
    <footer class="site-footer">
        <div class="footer-top">
            <a class="logo" href="/">
                <img src="~/Content/Images/LungisaLogo.png" alt="Lungisa Logo">
            </a>
            <div class="footer-col">
                <h3>LUNGIS</h3>
                <ul>
                    <li><a href="/Home/Index" class="nav-link">HOME</a></li>
                    <li><a href="/Home/About" class="nav-link">ABOUT</a></li>
                    <li><a href="/Home/Services" class="nav-link">SERVICES</a></li>
                    <li><a href="/Home/Projects" class="nav-link">PROJECTS</a></li>
                    <li><a href="/Home/News" class="nav-link active">LATEST NEWS</a></li>
                    <li><a href="/Home/Contact" class="nav-link">CONTACT</a></li>
                </ul>
            </div>

            <div class="footer-col">
                <h3>Connect</h3>
                <div class="socials">
                    <a href="#">Facebook</a>
                    <a href="#">Instagram</a>
                    <a href="#">Twitter</a>
                    <a href="#">LinkedIn</a>
                </div>
            </div>

            <div class="footer-col subscribe">
                <h3>Subscribe to get latest updates</h3>
                <form>
                    <input type="email" placeholder="your email">
                    <button type="submit">Subscribe</button>
                </form>
            </div>
        </div>

        <div class="footer-bottom">
            <p>© 2025 Lungis. All rights reserved.</p>
        </div>
    </footer>
</body>

</html>
